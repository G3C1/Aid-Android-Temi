<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.g3c1.oasis_android_temi.presentation.ui.moving.MovingActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.moving.MovingActivity">

        <ImageView
            android:layout_marginEnd="300dp"
            android:id="@+id/temi"
            android:layout_width="126dp"
            android:layout_height="370dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/temi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_marginTop="450dp"
            android:id="@+id/movingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="@string/go_homebase"
            android:textColor="@color/black2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exDot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="@string/dot"
            android:textColor="@color/black2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/movingText"
            app:layout_constraintStart_toEndOf="@id/movingText"
            app:layout_constraintTop_toTopOf="@+id/movingText" />

        <TextView
            android:id="@+id/exDot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="@string/dot"
            android:textColor="@color/black2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/movingText"
            app:layout_constraintStart_toEndOf="@+id/exDot3"
            app:layout_constraintTop_toTopOf="@+id/movingText" />

        <TextView
            android:id="@+id/exDot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard"
            android:text="@string/dot"
            android:textColor="@color/black2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/movingText"
            app:layout_constraintStart_toEndOf="@+id/exDot1"
            app:layout_constraintTop_toTopOf="@+id/movingText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>